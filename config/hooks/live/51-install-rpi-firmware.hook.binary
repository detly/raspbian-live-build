#!/bin/sh
#
# Installs the Raspberry PI firmware (bootloader, kernel etc)

cp -L ../chroot/boot/* .

cat >issue.txt <<EOF
RACHEL image
EOF

cat >cmdline.txt <<EOF
rw earlyprintk loglevel=8 console=ttyAMA0,115200 console=tty1 dwc_otg.lpm_enable=0 root=/dev/mmcblk0p1 elevator=deadline fsck.repair=yes rootwait boot=live components
EOF

cat >config.txt <<EOF
kernel=live/vmlinuz-4.4.0-1-rpi2
initramfs live/initrd.img-4.4.0-1-rpi2 0x00800000
EOF
